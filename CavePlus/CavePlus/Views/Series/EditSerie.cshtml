@model CavePlus.Models.BaseSerieViewModel // Cambia esto al namespace correcto

@section Styles {
    <link rel="stylesheet" href="~/css/series.css" asp-append-version="true" />
}

<div class="editserie">
<h2 class="title">Editar Serie</h2>

<form asp-action="EditSerie" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Nombre">Nombre de la Serie</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Portada">Portada</label>
        <input asp-for="Portada" class="form-control" />
        <span asp-validation-for="Portada" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="LinkYT">Enlace de YouTube</label>
        <input asp-for="LinkYT" class="form-control" />
        <span asp-validation-for="LinkYT" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ProductoraId">Productora</label>
        <select asp-for="ProductoraId" asp-items="@(new SelectList(Model.Productoras, "ProductoraId", "Nombre"))" class="form-control"></select>
        <span asp-validation-for="ProductoraId" class="text-danger"></span>
    </div>

    <div class="form-group">
            <label for="GeneroPrimarioId">Genero Primario</label>
        <select asp-for="GeneroPrimarioId" asp-items="@(new SelectList(Model.Generos, "GeneroId", "Nombre"))" class="form-control"></select>
        <span asp-validation-for="GeneroPrimarioId" class="text-danger"></span>
    </div>

    <div class="form-group">
            <label for="GeneroSecundarioId">Genero Secundario</label>
        <select asp-for="GeneroSecundarioId" asp-items="@(new SelectList(Model.Generos, "GeneroId", "Nombre"))" class="form-control"></select>
        <span asp-validation-for="GeneroSecundarioId" class="text-danger"></span>
    </div>

    <div class="btns">
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="@Url.Action("ControlSeries", "Series")" class="btn btn-secondary">Volver</a>
     </div>
</form>
</div>