@model CavePlus.Models.ProductoraViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/productora.css" asp-append-version="true" />
}

<div class="addproductora">
<h2 class="title">Crear Nueva Productora</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="AddConf" method="post">
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Nombre de la productora" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="btns">
                <a href="@Url.Action("ControlProductora")" class="btn btn-secondary">Volver</a>
                <button type="submit" class="btn btn-primary">Crear Productora</button>
            </div>
        </form>
    </div>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
