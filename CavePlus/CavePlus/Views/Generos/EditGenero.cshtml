@model CavePlus.Models.GenerosViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/generos.css" asp-append-version=" true" />
}

<div class="editgenero">
<h2 class="title">Editar Género</h2>

<form asp-action="EditGenero" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="GeneroId" />
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="@Url.Action("ControlGeneros", "Generos")" class="btn btn-secondary">Volver</a>
</form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
